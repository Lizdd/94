# Импортируем модуль random для генерации случайных чисел.
import random

# Функция для броска кубика.
def roll_dice():
    # Генерируем случайное число от 1 до 6, так как у нас шестигранный кубик.
    return random.randint(1, 6)

# Функция для проверки, является ли число чётным.
def is_even(number):
    # Возвращаем True, если число чётное, иначе False.
    return number % 2 == 0

# Функция для проверки, является ли число простым.
def is_prime(number):
    # Проверяем, что число больше 1.
    if number <= 1:
        return False
    # Проверяем, что число не больше 3, так как 2 и 3 - простые числа.
    elif number <= 3:
        return True
    else:
        # Делим число на все возможные делители, начиная с 2 и до корня из number.
        for i in range(2, int(number**0.5) + 1):
            if number % i == 0:
                return False
    # Если делителей нет, число простое.
    return True

# Функция для проверки, является ли число совершенным.
def is_perfect(number):
    # Сумма всех делителей числа, меньших самого числа, должна быть равна самому числу.
    sum_of_divisors = 0
    # Перебираем делители от 1 до корня из number.
    for i in range(1, int(number**0.5) + 1):
        if number % i == 0:
            # Добавляем текущий делитель и его пару к сумме.
            sum_of_divisors += i + number // i
    # Если сумма равна самому числу, оно совершенное.
    return sum_of_divisors == number

# Функция для проверки, является ли число дружественным.
def are_friendly(a, b):
    # Проверяем, что наибольший общий делитель чисел a и b равен 1.
    greatest_common_divisor = math.gcd(a, b)
    if greatest_common_divisor == 1:
        # Проверяем, что суммы делителей чисел a и b равны.
        return sum_of_divisors(a) == sum_of_divisors(b)
    return False

# Функция для вычисления наибольшего общего делителя двух чисел.
def math.gcd(a, b):
    # Используем алгоритм Евклида для вычисления НОД.
    while b:
        a, b = b, a % b
    return a

# Функция для вычисления суммы всех делителей числа.
def sum_of_divisors(number):
    # Сумма всех делителей числа равна произведению числа на сумму его собственных делителей.
    total_sum = 0
    # Перебираем делители от 1 до корня из number.
    for i in range(1, int(number**0.5) + 1):
        if number % i == 0:
            # Добавляем текущий делитель и его пару к сумме.
            total_sum += i + number // i
    return number * total_sum

# Пример использования функций.
# Выводим результаты бросков кубика.
for _ in range(10):
    print(roll_dice())

# Проверяем, является ли число 4 чётным.
print(is_even(4))

# Проверяем, является ли число 7 простым.
print(is_prime(7))

# Проверяем, является ли число 6 совершенным.
print(is_perfect(6))

# Проверяем, являются ли числа 220 и 284 дружественными.
print(are_friendly(220, 284))
